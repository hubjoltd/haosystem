modules = ["java-graalvm22.3", "web", "nodejs-20"]

[nix]
channel = "stable-25_05"
packages = ["maven"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Angular Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Spring Boot Backend"

[[workflows.workflow]]
name = "Angular Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run start"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Spring Boot Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && mvn spring-boot:run"
waitForPort = 8080

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[agent]
expertMode = true

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd backend && PORT=5000 java -jar target/erp-backend-1.0.0.jar"]
build = ["bash", "-c", "cd frontend && npm install && npm run build && mkdir -p ../backend/src/main/resources/static && if [ -d dist/frontend/browser ]; then cp -r dist/frontend/browser/. ../backend/src/main/resources/static/; else cp -r dist/frontend/. ../backend/src/main/resources/static/; fi && cd ../backend && mvn clean package -DskipTests"]

[userenv]

[userenv.production]
PGSSLMODE = "require"
