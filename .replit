modules = ["java-graalvm22.3", "web", "nodejs-20", "bash", "postgresql-16"]

[nix]
channel = "stable-25_05"
packages = ["maven"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Angular Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Spring Boot Backend"

[[workflows.workflow]]
name = "Angular Frontend"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run start"
waitForPort = 5000

[[workflows.workflow]]
name = "Spring Boot Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && mvn spring-boot:run"
waitForPort = 8080

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[agent]
expertMode = true

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd backend && PORT=5000 java -jar target/erp-backend-1.0.0.jar"]
build = ["bash", "build.sh"]

[userenv]

[userenv.production]
PGSSLMODE = "require"
