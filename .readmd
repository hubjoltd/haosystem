modules = ["java-graalvm22.3", "nodejs-20", "web", "bash", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash /home/runner/workspace/start.sh"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", '''if [ -n "$DATABASE_URL" ] && [ -z "$PGHOST" ]; then export PGHOST=$(echo $DATABASE_URL | sed -n 's|.*@\([^:]*\):.*|\1|p'); export PGPORT=$(echo $DATABASE_URL | sed -n 's|.*:\([0-9]*\)/.*|\1|p'); export PGDATABASE=$(echo $DATABASE_URL | sed -n 's|.*/\([^?]*\).*|\1|p'); export PGUSER=$(echo $DATABASE_URL | sed -n 's|.*://\([^:]*\):.*|\1|p'); export PGPASSWORD=$(echo $DATABASE_URL | sed -n 's|.*://[^:]*:\([^@]*\)@.*|\1|p'); fi; java -jar backend/target/erp-backend-1.0.0.jar --server.port=5000''']
build = ["bash", "build.sh"]
